@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Authen_Demo.Models.User
@{
	ViewData["Title"] = "Set Role";
	var roles = ViewBag.Roles as List<Authen_Demo.Models.Role>;
}
<h2>Set Role for @Model.Account</h2>

<form asp-controller="Home" asp-action="SetRole" method="post">
    <input type="hidden" asp-for="UserId" />

    <label for="RoleId">Chọn vai trò:</label>
    <select asp-for="RoleId" class="form-control">
        @foreach (var role in roles)
        {
            <option value="@role.RoleId" selected="@(role.RoleId == Model.RoleId)">
                @role.Name
            </option>
        }
    </select>

    <button type="submit">Cập nhật</button>
</form>