@model CompanyManage.Models.CreateEmployeeModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h2>Tạo nhân viên mới</h2>
<form asp-action="CreateEmployee" method="post" class="mt-3">
    <div class="form-group">
        <label asp-for="Name">Họ và tên</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Mật khẩu</label>
        <input asp-for="Password" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <label asp-for="DepartmentId">Phòng ban</label>
        <select asp-for="DepartmentId" class="form-control" asp-items="@(new SelectList(ViewBag.Departments, "Id", "Name"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="PositionId">Vị trí</label>
        <select asp-for="PositionId" class="form-control" asp-items="@(new SelectList(ViewBag.Positions, "Id", "Name"))"></select>
    </div>
    <button type="submit" class="btn btn-primary">Tạo</button>
</form>