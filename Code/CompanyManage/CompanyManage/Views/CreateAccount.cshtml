@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model CompanyManage.Models.CreateAccountModel

<h2>Cấp tài khoản mới</h2>
<form asp-action="CreateAccount" method="post" class="mt-3">
    <div class="form-group">
        <label asp-for="UserName">Tên đăng nhập</label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Mật khẩu</label>
        <input asp-for="Password" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <label asp-for="Role">Vai trò</label>
        <select asp-for="Role" class="form-control">
            <option value="Admin">Admin</option>
            <option value="User">User</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Tạo</button>
</form>